# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = 120
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{json,js,ts}]
indent_style = space  
indent_size = 2

[*.{rs,toml}]
indent_style = space
indent_size = 4

[*.{py}]
indent_style = space
indent_size = 4

[*.ebnf]
indent_style = space
indent_size = 2
