                MFASettings settings = MFASettings(
                    int totp-window-seconds = 30,
                    int sms-code-expiry-minutes = 5,
                    int max-failed-mfa-attempts = 3,
                    bool remember-device = true,
                    int remember-device-days = 30
                )
