                    bool require-lowercase = true,
                    bool require-numbers = true,
                    bool require-special-chars = true,
                    int min-special-chars = 2,
                    array[string] forbidden-patterns = [
                        "password", "123456", "qwerty", "admin", 
                        "company", "welcome", "login"
                    ]
