            // Multi-factor authentication
            MFAConfig mfa = MFAConfig(
                bool required = true,
                array[string] methods = ["totp", "webauthn", "sms"],
                int grace-period-minutes = 5,
                int max-attempts = 3,
                int lockout-duration-minutes = 30
