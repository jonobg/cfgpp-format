{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "CFG++",
  "scopeName": "source.cfgpp",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#enum-definition"
    },
    {
      "include": "#object-definition"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#booleans"
    },
    {
      "include": "#arrays"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.cfgpp",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.block.cfgpp",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "enum-definition": {
      "patterns": [
        {
          "match": "\\b(enum)(::)([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.control.cfgpp"
            },
            "2": {
              "name": "punctuation.separator.namespace.cfgpp"
            },
            "3": {
              "name": "entity.name.type.enum.cfgpp"
            }
          }
        }
      ]
    },
    "object-definition": {
      "patterns": [
        {
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)(::)?([a-zA-Z_][a-zA-Z0-9_]*)?",
          "captures": {
            "1": {
              "name": "entity.name.type.object.cfgpp"
            },
            "2": {
              "name": "punctuation.separator.namespace.cfgpp"
            },
            "3": {
              "name": "entity.name.function.cfgpp"
            }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.cfgpp",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.cfgpp",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.decimal.cfgpp",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.cfgpp",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "arrays": {
      "patterns": [
        {
          "name": "meta.structure.array.cfgpp",
          "begin": "\\[",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.array.begin.cfgpp"
            }
          },
          "end": "\\]",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.array.end.cfgpp"
            }
          },
          "patterns": [
            {
              "include": "$self"
            }
          ]
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.cfgpp",
          "match": "="
        },
        {
          "name": "punctuation.separator.comma.cfgpp",
          "match": ","
        },
        {
          "name": "punctuation.terminator.semicolon.cfgpp",
          "match": ";"
        },
        {
          "name": "punctuation.definition.block.begin.cfgpp",
          "match": "\\{"
        },
        {
          "name": "punctuation.definition.block.end.cfgpp",
          "match": "\\}"
        },
        {
          "name": "punctuation.definition.parameters.begin.cfgpp",
          "match": "\\("
        },
        {
          "name": "punctuation.definition.parameters.end.cfgpp",
          "match": "\\)"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.cfgpp",
          "match": "\\b(enum|values|default)\\b"
        },
        {
          "name": "storage.type.cfgpp",
          "match": "\\b(string|int|float|bool|array)\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.property.cfgpp",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*=)"
        },
        {
          "name": "variable.parameter.cfgpp",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*[,)])"
        },
        {
          "name": "variable.other.cfgpp",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
